{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Network Snapshot Schema",
  "description": "Schema for point-in-time graph state snapshots",
  "type": "object",
  "required": [
    "snapshot_id",
    "snapshot_at",
    "entities",
    "edges",
    "_meta"
  ],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["schema_version", "doctrine_version", "last_updated"],
      "properties": {
        "schema_version": {"type": "string", "default": "1.0.0"},
        "doctrine_version": {"type": "string"},
        "last_updated": {"type": "string", "format": "date-time"}
      }
    },
    "snapshot_id": {"type": "string", "format": "uuid"},
    "snapshot_at": {"type": "string", "format": "date-time"},
    "legislative_state": {
      "type": ["string", "null"],
      "enum": ["PRE_EVT", "INTRO_EVT", "COMM_EVT", "FLOOR_EVT", "FINAL_EVT", "IMPL_EVT", null]
    },
    "entities": {
      "type": "array",
      "items": {"type": "object"},
      "description": "Snapshot of entities at this point in time"
    },
    "edges": {
      "type": "array",
      "items": {"type": "object"},
      "description": "Snapshot of edges at this point in time"
    },
    "control_classifications": {
      "type": "array",
      "items": {"type": "object"},
      "description": "Snapshot of control classifications at this point in time"
    }
  },
  "additionalProperties": false
}
