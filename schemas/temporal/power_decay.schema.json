{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Power Decay Schema",
  "description": "Schema for tracking entity power decay over time",
  "type": "object",
  "required": [
    "decay_id",
    "entity_id",
    "power_metric",
    "value_at_time",
    "_meta"
  ],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["schema_version", "doctrine_version", "last_updated"],
      "properties": {
        "schema_version": {"type": "string", "default": "1.0.0"},
        "doctrine_version": {"type": "string"},
        "last_updated": {"type": "string", "format": "date-time"}
      }
    },
    "decay_id": {"type": "string", "format": "uuid"},
    "entity_id": {"type": "string"},
    "power_metric": {
      "type": "string",
      "enum": ["procedural_power", "temporal_leverage", "informational_advantage", "institutional_memory", "retaliation_capacity", "aggregate_power"]
    },
    "context": {
      "type": "object",
      "properties": {
        "legislative_state": {"type": ["string", "null"], "enum": ["PRE_EVT", "INTRO_EVT", "COMM_EVT", "FLOOR_EVT", "FINAL_EVT", "IMPL_EVT", null]},
        "policy_area": {"type": ["string", "null"]},
        "committee_id": {"type": ["string", "null"]}
      }
    },
    "value_at_time": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "value"],
        "properties": {
          "timestamp": {"type": "string", "format": "date-time"},
          "value": {"type": "number", "minimum": 0.0, "maximum": 1.0},
          "trigger": {"type": "string"}
        }
      }
    },
    "decay_function": {
      "type": "string",
      "enum": ["linear", "exponential", "step", "custom"],
      "description": "Type of decay function"
    }
  },
  "additionalProperties": false
}
